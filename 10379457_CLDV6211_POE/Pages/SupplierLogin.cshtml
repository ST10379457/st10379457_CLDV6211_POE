@page
@model _10379457_CLDV6211_POE.Pages.SupplierLoginModel
@{
    ViewData["Title"] = "Supplier Login";
    Layout = "/Pages/Shared/_Layout.cshtml"; 
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card mt-5">
                <div class="card-header">
                    <h2 class="text-center">Supplier Login</h2>
                </div>
                <div class="card-body">
                    @if (!string.IsNullOrEmpty(Model.LoginMessage))
                    {
                        <div class="alert alert-danger" role="alert">
                            @Model.LoginMessage
                        </div>
                    }

                    <form method="post">
                        <div class="form-group">
                            <label for="supplierName">Supplier Name:</label>
                            <input type="text" class="form-control" id="supplierName" name="SupplierName" required>
                        </div>
                        <div class="form-group">
                            <label for="password">Password:</label>
                            <input type="password" class="form-control" id="password" name="Password" required>
                        </div>
                        <button type="submit" class="btn btn-primary btn-block">Login</button>
                    </form>
                </div>
            </div>

            <div class="text-center mt-3">
                <p>Don't have an account?</p>
                <a href="/SupplierRegister" class="btn btn-outline-secondary">Register</a>
            </div>
        </div>
    </div>
</div>
