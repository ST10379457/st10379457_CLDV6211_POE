@page
@model _10379457_CLDV6211_POE.Pages.SupplierRegisterModel
@{
    ViewData["Title"] = "Supplier Registration";
    Layout = "/Pages/Shared/_Layout.cshtml"; 
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card mt-5">
                <div class="card-header">
                    <h2 class="text-center">Supplier Registration</h2>
                </div>
                <div class="card-body">
                    @if (!string.IsNullOrEmpty(Model.RegisterMessage))
                    {
                        <div class="alert alert-info" role="alert">
                            @Model.RegisterMessage
                        </div>
                    }

                    <form method="post">
                        <div class="form-group">
                            <label for="supplierName">Supplier Name:*</label>
                            <input type="text" class="form-control" id="supplierName" name="SupplierName" required>
                        </div>
                        <div class="form-group">
                            <label for="password">Password:*</label>
                            <input type="password" class="form-control" id="password" name="Password" required>
                        </div>
                        <div class="form-group">
                            <label for="email">Email:</label>
                            <input type="email" class="form-control" id="email" name="Email">
                        </div>
                        <div class="form-group"> 
                            <label for="phoneNumber">Phone Number:*</label>
                            <input type="text" class="form-control" id="phoneNumber" name="PhoneNumber">
                        </div>
                        <button type="submit" class="btn btn-primary btn-block">Register</button>
                    </form>
                </div>
            </div>

            <div class="text-center mt-3">
                <p>Already have an account?</p>
                <a href="/SupplierLogin" class="btn btn-outline-secondary">Login</a>
            </div>
        </div>
    </div>
</div>
